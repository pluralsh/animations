---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <style is:global>
      html,
      body {
        margin: 0;
        padding: 0;
        background-color: #2a2e37; /* Fill 1 */
        background-color: #171a21; /* Fill 0 */
        min-height: 100vh;
        min-width: 100vw;

        background: radial-gradient(
          circle at top right,
          #46525d,
          #25294f,
          #171a21,
          #171a21
        );
      }

      #hhh_heroRoot {
        margin-left: auto;
        margin-right: auto;
        margin-top: 50px;
        transform-origin: 0 0;
        transform: scale(calc(10vw * 1));
      }
    </style>
    <slot />
  </body>
</html>
